@model IEnumerable<Hastane.Models.Departman>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}





<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-5 col-5">
                <h4 class="page-title"><font color="#009EFB"><strong>Tıbbi Birimler</strong></font></h4>
            </div>
            <div class="col-sm-7 col-7 text-right m-b-30">
                <a href="/AdminDepartman/Create" class="btn btn-primary btn-rounded"><i class="fa fa-plus"></i> Tıbbi Birim Ekle</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table mb-0 datatable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Tıbbi Birim</th>
                                <th>Fotoğraf</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmanId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartmanAdı)
                                    </td>
                                    <td>
                                        <img src="/img/@item.DepartmanFotograf" height="60" />
                                    </td>
                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.DepartmanId"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.DepartmanId"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
   
</div>


