@model Hastane.Models.Doktor

@{
	ViewData["Title"] = "Delete";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<body>
    <div class="main-wrapper">

        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
					   <h4 class="page-title"><font color="#009EFB"><strong>Bu Doktoru Silmek İstediğinize Eminmisiniz?</strong></font></h4>
                    </div>
                </div>
				<br />
				<br />
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
						<form asp-action="Delete" enctype="multipart/form-data" method="post">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<input type="hidden" asp-for="DoktorID" />

							<div class="row">

								<div class="profile-upload">
									<div class="upload-img" >
										<img style="height:60px; width:60px; " src="/img/@Model.DoktorFotograf" alt="@Model.DoktorFotograf adlı doktor görseli" />
									</div>
									<div class="upload-input">
										Ad Soyad
										<input asp-for="AdSoyad" class="form-control" disabled="true" />
										<span asp-validation-for="AdSoyad" class="text-danger"></span>
									</div>
								</div>


								<div class="col-sm-6">
									<div class="form-group">
										Tıbbi Birim
										<input asp-for="Departman.DepartmanAdı" class="form-control" disabled="true" />
									</div>
								</div>
							</div>
							
							<div class="m-t-20 text-center" style="margin-right:300px;">
								<button type="submit" value="Delete" class="btn btn-danger submit-btn">Sil</button> &nbsp;&nbsp;
								<button asp-action="Index" class="btn btn-dark submit-btn">Geri Dön</button>
							</div>


						</form>
                    </div>
                </div>
            </div>

        </div>
    </div>


</body>