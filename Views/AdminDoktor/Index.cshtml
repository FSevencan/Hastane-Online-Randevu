@model Hastane.ViewModels.DoktorDepartmanFiltreViewModel


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<body>
    
     <div class="page-wrapper">

          <div class="content">
              <div class="row">
                    <div class="col-sm-4 col-3">
                         <h4 class="page-title"><font color="#009EFB"><strong>Doktorlar</strong></font></h4>
                    </div>
                    <div class="col-sm-8 col-9 text-right m-b-20">
                        <a href="/AdminDoktor/Create" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Doktor Ekle</a>
                    </div>
              </div>

            <form asp-controller="AdminDoktor" asp-action="Index" method="get">

                Tıbbi Birim:
                <select asp-for="DepartmanAdi" asp-items="Model.Departmanlar">
                    <option value="">Tümü</option>
                </select>

                &nbsp;&nbsp;Doktor Adı: <input type="text" asp-for="AramaMetni" />

                <input type="submit" value="Ara" />

            </form>
            <br />
            <br />

                <div class="row doctor-grid">
                    @foreach (var doktor in Model.Doktorlar)
                  {
                    
                    <div class="col-md-4 col-sm-4  col-lg-3">
                        <div class="profile-widget">
                            <div class="doctor-img">
                                <img class="avatar" src="/img/@doktor.DoktorFotograf" />
                            </div>
                            <div class="dropdown profile-action">
                                <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                  
                                    <a asp-action="Edit" class="dropdown-item" asp-route-id="@doktor.DoktorID"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                    <a class="dropdown-item" asp-action="Delete" asp-route-id="@doktor.DoktorID"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                   
                                </div>
                            </div>
                            <h4 class="doctor-name text-ellipsis">@doktor.AdSoyad</h4>
                            <div class="doc-prof">@doktor.Departman.DepartmanAdı</div>
                           
                        </div>
                    </div>

                  }
                  
              </div>
               
            </div>
      </div> 
</body>


