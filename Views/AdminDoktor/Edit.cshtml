@model Hastane.Models.Doktor

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />

<body>
    <div class="main-wrapper">
       
        <div class="page-wrapper">
            <div class="content">
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <h4 class="page-title"><font color="#009EFB"><strong>Doktor Bilgileri Düzenle</strong></font></h4>
                        
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-lg-8 offset-lg-2">
                        <form asp-action="Edit" enctype="multipart/form-data" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="DoktorID" />

                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                       Ad Soyad
                                        <input asp-for="AdSoyad" class="form-control" />
                                        <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                    </div>
                                </div>
                      
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        Tıbbi Birim
                                        <select asp-for="DepartmanId" class="form-control" asp-items="ViewBag.DepartmanId"></select>
                                        <span asp-validation-for="DepartmanId" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label>Fotoğraf</label>
                                        <div class="profile-upload">
                                            <div class="upload-img">
                                                <img src="/img/@Model.DoktorFotograf" alt="@Model.DoktorFotograf adlı doktor görseli" />
                                            </div>
                                            <div class="upload-input">
                                                <input asp-for="DoktorFotograf" class="form-control" type="hidden" accept="image/*" />
                                                <input id="file" name="file" class="form-control" type="file" accept="image/*" />
                                                <span asp-validation-for="DoktorFotograf" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <br />
                            <div class="col-sm-6">
                                <label>Doktor Özgeçmişi</label>
                               <textarea cols="60" rows="10" id="myTextarea" asp-for="DoktorAcıklama"></textarea>
                                <span asp-validation-for="DoktorAcıklama" class="text-danger"></span>
                            </div>

                          
                            <br />
                            <div class="m-t-20 text-center">
                                <button type="submit" value="Save" class="btn btn-primary submit-btn">Kaydet</button> &nbsp;&nbsp;
                                <button asp-action="Index" class="btn btn-dark submit-btn">Geri Dön</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
 
   
</body>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
