@model Hastane.ViewModels.DoktorDepartmanFiltreViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-wrapper">
    <div class="content">
        <div class="row">
            <div class="col-sm-4 col-3">
                <h4 class="page-title"><font color="#009EFB"><strong>Doktor Randevu Takvimleri</strong></font></h4>
            </div>
            <div class="col-sm-8 col-9 text-right m-b-20">
                <a href="/AdminRandevuTakvimi/Create" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Randevu Takvimi Ekle</a>
            </div>
        </div>
        <br />
        <div class="row">
            <br />

            <form asp-controller="AdminRandevuTakvimi" asp-action="Index" method="get">

                Tıbbi Birim:
                <select asp-for="DepartmanAdi" asp-items="Model.Departmanlar">
                    <option value="">Tümü</option>
                </select>

                &nbsp;&nbsp; Doktor Adı: <input type="text" asp-for="AramaMetni" />

                <input type="submit" value="Ara" />

            </form>
            <br />
            <br />
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table">
                        <thead>
                            <tr>
                                <th>Doktor Adı</th>
                                <th>Tıbbi Birim</th>
                                <th>Tarih</th>
                                <th>9:00</th>
                                <th>10:00</th>
                                <th>11:00</th>
                                <th>13:00</th>
                                <th>14:00</th>
                                <th>15:00</th>
                                <th>16:00</th>

                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.RandevuTakvimleri)
                            {
                                <tr>
                                    <td>
                                        <img width="28" height="28" src="/img/@item.Doktor.DoktorFotograf" class="rounded-circle m-r-5" alt=""> @item.Doktor.AdSoyad
                                    </td>
                                    <td>
                                        @item.Doktor.Departman.DepartmanAdı
                                    </td>
                                    <th>
                                        @item.Tarih.ToString("dd.MM.yyyy")
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat9)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat10)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat11)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat13)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat14)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat15)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Saat16)
                                    </td>
                                   

                                    <td class="text-right">
                                        <div class="dropdown dropdown-action">
                                            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a asp-action="Edit" class="dropdown-item" asp-route-id="@item.RandevuTakvimiId"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                                <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.RandevuTakvimiId"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>


</div>

